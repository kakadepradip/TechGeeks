<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLoginScreen"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/techgeekslogo"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="45dp"
        app:srcCompat="@drawable/techgeekslogo" />

    <EditText
        android:id="@+id/editTextUserName1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/techgeekslogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="#11000000"
        android:padding="20dp"
        android:drawableLeft="@drawable/username"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUserName1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#11000000"
        android:padding="20dp"
        android:drawableLeft="@drawable/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword2"
        android:layout_centerInParent="true"
        android:background="#FF1493"
        android:text="Log In"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvforgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignLeft="@id/btnLogin"
        android:text="Forgot Password"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvforgotpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Not yet register?"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnRegisterHere"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvforgotpass"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#FF1493"
        android:text="Register Here..."
        android:textSize="25dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>